<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/myNoteFragment">

    <fragment
        android:id="@+id/myNoteFragment"
        android:name="com.djangoroid.android.hackathon.ui.mynote.MyNoteFragment"
        android:label="MyNoteFragment">

        <action
            android:id="@+id/action_myNoteFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
    </fragment>

    <fragment
        android:id="@+id/openNoteFragment"
        android:name="com.djangoroid.android.hackathon.ui.opennote.OpenNoteFragment"
        android:label="OpenNoteFragment">

    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.djangoroid.android.hackathon.ui.user.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_myNoteFragment"
            app:destination="@id/myNoteFragment" />
    </fragment>
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.djangoroid.android.hackathon.ui.user.SignupFragment"
        android:label="fragment_signup"
        tools:layout="@layout/fragment_signup" >
        <action
            android:id="@+id/action_signupFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>


</navigation>